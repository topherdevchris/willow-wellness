
---
import { SITE } from "../site.config";
import { Image } from "astro:assets";
import heroBg from "../assets/images/hero-tree.jpeg";
import logo from "../assets/logo/logo-wreath.png";
---

<section id="home" class="relative isolate min-h-[55vh] md:min-h-[65vh] grid place-items-center text-deep">
  <!-- Background -->
  <Image
    src={heroBg}
    alt={SITE.hero.alt}
    class="absolute inset-0 -z-10 h-full w-full object-cover"
    loading="eager"
    fetchpriority="high"
  />
  <div class="absolute inset-0 -z-10 bg-cream/90"></div>

  <!-- Content -->
  <div class="relative z-10 mx-auto flex w-full max-w-5xl flex-col items-center gap-4 px-4 py-10 md:py-14">
    <Image src={logo} alt="" aria-hidden="true" class="w-[420px] max-w-[80vw] h-auto" width="420" height="180" loading="eager" fetchpriority="high" />
    <h1 class="sr-only">{SITE.name}</h1>
    <p class="font-serif text-center text-lg md:text-xl">{SITE.tagline}</p>
    <button
        type="button"
        data-book-cta
        class="rounded-full border border-deep/30 bg-cream/90 px-5 py-2 text-[15px] font-medium text-deep hover:bg-sage/30 transition-colors
          focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/60
          focus-visible:ring-offset-2 focus-visible:ring-offset-bg">
        {SITE.bookCta}
  </button>
  </div>
</sectibuttonon>
