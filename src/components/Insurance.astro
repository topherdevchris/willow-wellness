---
const almaUrl = "https://secure.helloalma.com/providers/dominique-newman/"; // replace if needed
// Replace the list below with the exact providers from her Alma profile.
const insurance = [
  { name: "Aetna" },
  { name: "Cigna" },
  { name: "UnitedHealthcare" },
  { name: "Oxford" },
  { name: "Oscar Health" },
  // { name: "Empire/BCBS" },
  { name: "Self-pay available" },
];
---
<section id="insurance" class="bg-cream py-14 md:py-20">
  <div class="container space-y-8">
    <div class="max-w-2xl">
      <h2 class="font-serif text-deep text-3xl md:text-4xl font-semibold mb-3">
        Insurance &amp; Fees
      </h2>
      <p class="text-ink/90">
        Dominique partners with select insurance plans and also offers self-pay options.
        You can view current availability, verified insurance details, and fees through Alma.
      </p>
    </div>

    <!-- Cards -->
    <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
      {insurance.map((i) => (
        <div class="rounded-xl bg-sage/20 border border-deep/10 px-5 py-4">
          <p class="font-medium text-deep">{i.name}</p>
        </div>
      ))}
      <!-- Add/remove cards as needed -->
    </div>

    <!-- Alma CTA -->
    <div class="pt-2">
      <a
        href={almaUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block rounded-full border border-deep/30 bg-cream/80 px-5 py-2.5 text-[15px] font-medium text-deep hover:bg-sage/30 transition-colors"
      >
        View availability &amp; book via Alma
      </a>
    </div>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-deep/25 to-transparent"></div>
  </div>
</section>
