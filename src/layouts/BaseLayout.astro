---
import "../styles/global.css";
import NewPatientNotice from "../components/NewPatientNotice.astro";
import { SITE } from "../site.config";
---
<html lang="en" class="bg-cream text-ink">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <title>{SITE.name} | {SITE.description}</title>
    <meta name="description" content={SITE.description} />

    <meta name-"robots" content="index, follow" />
    <meta name="keywords" content="therapy, counseling, mental health, Huntington, LMHC" />

    <!-- Open Graph -->
    <meta property="og:title" content={SITE.name} />
    <meta property="og:description" content={SITE.description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={SITE.url} />
    <meta property="og:image" content={SITE.images.ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={SITE.name} />
    <meta name="twitter:description" content={SITE.description} />
    <meta name="twitter:image" content={SITE.images.ogImage} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon-dark.png?v=2" />
    <link rel="icon" type="image/png" href="/favicon-dark.png?v=2" />
    <link rel="icon" type="image/x-icon" href="/favicon-dark.png?v=2" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=2" />
    <link rel="manifest" href="/site.webmanifest?v=2" />
    <meta name="theme-color" content="#2E4A3B" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen antialiased font-sans">
    
<!-- Skip link (appears when focused) -->
    <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50
                          focus:bg-bg focus:text-primary focus:px-3 focus:py-2 focus:rounded-md
                          focus:ring-2 focus:ring-primary/50">
      Skip to main content
    </a>

    <slot name="header" />

    <!-- Main content -->
    <main id="main" tabindex="-1">
      <slot />
    </main>
    
    <slot name="footer" />
    
    <!-- Modal -->
    <NewPatientNotice />
  </body>
</html>
